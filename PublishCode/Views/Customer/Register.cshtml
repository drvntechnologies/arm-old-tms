                                        <label asp-for="ConfirmPassword" asp-postfix=":"></label>
                                        <nop-required />
                                        <div class="form-group passwordfild mb-0">
                                            <input asp-for="ConfirmPassword" placeholder="Enter your confirm password" class="password" />
                                            <svg class="pass-eye eye_visible" width="30px" height="30px" viewBox="0 0 16 16" xmlns="http://www.w3.org/2000/svg" fill="none">
                                                <g fill="#777777" fill-rule="evenodd" clip-rule="evenodd">
