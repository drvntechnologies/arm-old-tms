                                    @if (Model.DisplayCaptcha)
                                    {
                                        <nop-captcha />
                                    }
                                    @if (Model.HoneypotEnabled)
                                    {
                                        @Html.Raw(Html.GenerateHoneypotInput())
                                    }


                                    @if (Model.AcceptPrivacyPolicyEnabled || Model.GdprConsents.Count > 0)
                                    {

                                        @if (Model.AcceptPrivacyPolicyEnabled)
                                        {
                                            <script asp-location="Footer">
                                                $(document).ready(function () {
                                                $('#register-button').on('click', function () {
                                                if ($('#accept-consent').is(':checked')) {
                                                //do some stuff
                                                return true;
                                                } else {
                                                //just show validation errors, don't post
                                                alert('@Html.Raw(JavaScriptEncoder.Default.Encode(T("Account.Fields.AcceptPrivacyPolicy.Required").Text))');
                                                return false;
                                                }
                                                });
                                                });
                                            </script>
                                            <div class="inputs accept-consent">
                                                <input id="accept-consent" type="checkbox" name="accept-consent" />
                                                <label for="accept-consent">@T("Account.Fields.AcceptPrivacyPolicy")</label>
                                                @if (Model.AcceptPrivacyPolicyPopup)
                                                {
                                                    <span class="read" id="read-privacyinfo">@T("Account.Fields.AcceptPrivacyPolicy.Read")</span>
                                                    <script asp-location="Footer">
                                                        $(document).ready(function () {
                                                        $('#read-privacyinfo').on('click',
                                                        function (e) {
                                                        displayPopupContentFromUrl(
                                                        '@Url.RouteUrl("TopicPopup", new { SystemName = "privacyinfo" })',
                                                        '@T("Account.Fields.AcceptPrivacyPolicy")');
                                                        });
                                                        });
                                                    </script>
                                                }
                                                else
                                                {
                                                    <a class="read" id="read-privacyinfo" href="@Url.RouteTopicUrl("privacyinfo")">@T("Account.Fields.AcceptPrivacyPolicy.Read")</a>
                                                }
                                            </div>
                                        }

                                        @if (Model.GdprConsents.Count > 0)
                                        {
                                            foreach (var consent in Model.GdprConsents)
                                            {
                                                if (consent.IsRequired)
                                                {
                                                    <script asp-location="Footer">
                                                        $(document).ready(function () {
                                                        $('#register-button').on('click', function () {
                                                        if ($('#consent@(consent.Id)').is(':checked')) {
                                                        //do some stuff
                                                        return true;
                                                        } else {
                                                        //just show validation errors, don't post
                                                        alert('@Html.Raw(JavaScriptEncoder.Default.Encode(consent.RequiredMessage))');
                                                        return false;
                                                        }
                                                        });
                                                        });
                                                    </script>
                                                }
                                                <div class="inputs accept-consent">
                                                    <input id="consent@(consent.Id)" type="checkbox" name="consent@(consent.Id)" checked="@consent.Accepted" />
                                                    <label for="consent@(consent.Id)">@consent.Message</label>
                                                </div>
                                            }

                                        }

                                    }
                                </div>
                            </div>


                            <div class="buttons">
                                <button type="submit" name="register-button" id="register-button" class="form-main-btn login-btn register-next-step-button">@T("Account.Register.Button")</button>
                                <button type="button" class="form-main-btn login-btn" onclick="window.location.href='Login'">@T("Account.BackToLogin")</button>
                            </div>
                        </div>
                        @if (!storeInformationSettings.HidePoweredByNopCommerce)
                        {
                            <div class="footer-powered-by" style="float: right;">
                                @*Would you like to remove the "Powered by nopCommerce" link in the bottom of the footer?
                        Please find more info at https://www.nopcommerce.com/nopcommerce-copyright-removal-key*@
                                Powered by <a href="@(OfficialSite.Main)" target="_blank">nopCommerce</a>
                            </div>
                        }
                    </div>
                </div>
            </main>
           
        </form>
        <div class="external-authentication">
            @await Component.InvokeAsync(typeof(ExternalMethodsViewComponent), "ExternalAuthentication")
        </div>
        @await Component.InvokeAsync(typeof(WidgetViewComponent), new { widgetZone = PublicWidgetZones.RegisterBottom, additionalData = Model })
    </div>
</div>
<script>
    let previousEmail = "";

    commonPhoneNumber("#Phone, #CompanyPhone");
    removeSpecialCharactersAndNumber("#FirstName, #LastName");
    restrictToCityNameFormat("#City");
    enforceLowerCase("#Email");
    allowNumericWithMaxLength("#ZipPostalCode", 5);

    $("#ZipPostalCode").keyup(function () {
        let zipCodeId = $(this).attr('id');
        let zipCodeValue = $("#" + zipCodeId).val();

        if (zipCodeValue.length === 5) {
            var txtZipCode = zipCodeValue;
            var postData = { zipCode: txtZipCode };

            addAntiForgeryToken(postData);

            $.ajax({
                cache: false,
                type: "GET",
                url: "@(Url.Action("GetLocationInfoGoogleAPI", "LogisticsCommon"))",
                data: postData,
                success: function (response) {
                    $("#City").val(response.city);
                    $("#StateProvinceId").val(response.state);
                },
                error: function (jqXHR, textStatus, errorThrown) {

                }
            });
        }
        else {
            $("#City").val('');
            $("#StateProvinceId").val(0);
        }
    });

    $(function(){
        $(".eye_visible").show();
        $('.eye_close').hide();

        fetchCompanyDetailFromEmail($("#Email").val());
    });

    $('.eye_visible').click(function() {
        $(this).siblings(".password").attr('type', 'text');
        $(this).hide();
        $(this).siblings(".eye_close").show();
    });

    $('.eye_close').click(function() {
        $(this).siblings(".password").attr('type', 'password');
        $(this).hide();
        $(this).siblings(".eye_visible").show();
    });

    function enableReadonlyCompanyFields(){
        
        const $Company = $("#Company");
        const $CompanyPhone = $("#CompanyPhone");
        const $StreetAddress = $("#StreetAddress");
        const $City = $("#City");
        const $StateProvinceId = $("#StateProvinceId");
        const $ZipPostalCode = $("#ZipPostalCode");

        $Company.prop('readonly', false);
        $CompanyPhone.prop('readonly', false);
        $StreetAddress.prop('readonly', false);
        $City.prop('readonly', false);
        $StateProvinceId.css('pointer-events', 'auto');
        $ZipPostalCode.prop('readonly', false);

        $Company.css('background-color', '#fff');
        $CompanyPhone.css('background-color', '#fff');
        $StreetAddress.css('background-color', '#fff');
        $City.css('background-color', '#fff');
        $StateProvinceId.css('background-color', '#fff');
        $ZipPostalCode.css('background-color', '#fff');
    }

    function fetchCompanyDetailFromEmail(email){
        if (email === undefined || email === null || email.trim().length === 0){
            return false;
        }

        email = email.trim();

        $.get("@Url.Action("GetCustomerCompanyByEmail", "Customer")", {email: email}, function(data){
            if(!data) return false;

            if(!data.Status) return false;

            previousEmail = email;

            const $Company = $("#Company");
            const $CompanyPhone = $("#CompanyPhone");
            const $StreetAddress = $("#StreetAddress");
            const $City = $("#City");
            const $StateProvinceId = $("#StateProvinceId");
            const $ZipPostalCode = $("#ZipPostalCode");

            if (data.Name && data.Name.length > 0){
                $Company.val(data.Name);
                $Company.prop('readonly', true);
                $Company.css('background-color', 'lightgray');
            }

            if (data.Phone && data.Phone.length > 0){
                $CompanyPhone.val(data.Phone);
                $CompanyPhone.prop('readonly', true);
                $CompanyPhone.css('background-color', 'lightgray');
            }

            if (data.Address && data.Address.length > 0){
                $StreetAddress.val(data.Address);
                $StreetAddress.prop('readonly', true);
                $StreetAddress.css('background-color', 'lightgray');
            }

            if (data.City && data.City.length > 0){
                $City.val(data.City);
                $City.prop('readonly', true);
                $City.css('background-color', 'lightgray');
            }

            if (data.StateProvinceId && data.StateProvinceId > 0){
                $StateProvinceId.val(data.StateProvinceId);
                $StateProvinceId.css('pointer-events', 'none');
                $StateProvinceId.css('background-color', 'lightgray');
            }

            if (data.ZipCode && data.ZipCode.length > 0){
                $ZipPostalCode.val(data.ZipCode);
                $ZipPostalCode.prop('readonly', true);
                $ZipPostalCode.css('background-color', 'lightgray');
            }
        });
    }

    $("#Email").focusout(function(){

        var email = $(this).val();
        
        if(previousEmail !== email){
            enableReadonlyCompanyFields();
        }

        fetchCompanyDetailFromEmail(email);
    });
</script>