@model EmailAccountModel

<div class="validation-top-listarea">
    <div asp-validation-summary="All"></div>    
</div>
<input asp-for="Id" type="hidden" />

<section class="content create-edit-pg-common-design">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="cards-group">
                @await Component.InvokeAsync(typeof(AdminWidgetViewComponent), new { widgetZone = AdminWidgetZones.EmailAccountDetailsTop, additionalData = Model })
                <div class="card card-default mb-0 d-card">
                    <div class="card-header with-border">
                        <h3 class="card-title">
                            <i class="fa fa-info" aria-hidden="true"></i> 
                            Email Accounts Information
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 col-xl-12">
                                <div class="form-group row" id="email-area">
                                    <div class="col-xl-3">
                                        <nop-label asp-for="Email" asp-required="true" />
                                    </div>
                                    <div class="col-xl-4">
                                        <nop-editor asp-for="Email" html-attributes="@(new { placeholder = "Enter Email Address" })" />
                                        <span asp-validation-for="Email"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-xl-12">
                                <div class="form-group row" id="display-name-area">
                                    <div class="col-xl-3">
                                        <nop-label asp-for="DisplayName" asp-required="true" />
                                    </div>
                                    <div class="col-xl-4">
                                        <nop-editor asp-for="DisplayName" html-attributes="@(new { placeholder = "Enter Email Display Name" })" />
                                        <span asp-validation-for="DisplayName"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-xl-12">
                                <div class="form-group row" id="host-area">
                                    <div class="col-xl-3">
                                        <nop-label asp-for="Host" />
                                    </div>
                                    <div class="col-xl-4">
                                        <nop-editor asp-for="Host" html-attributes="@(new { placeholder = "Enter Host" })" />
                                        <span asp-validation-for="Host"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-xl-12">
                                <div class="form-group row" id="port-area">
                                    <div class="col-xl-3">
                                        <nop-label asp-for="Port" />
                                    </div>
                                    <div class="col-xl-4">
                                        <nop-editor asp-for="Port" html-attributes="@(new { placeholder = "Enter Port" })" />
                                        <span asp-validation-for="Port"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-xl-12">
                                <div class="form-group row" id="username-area">
                                    <div class="col-xl-3">
                                        <nop-label asp-for="Username" />
                                    </div>
                                    <div class="col-xl-4">
                                        <nop-editor asp-for="Username" html-attributes="@(new { placeholder = "Enter User" })" />
                                        <span asp-validation-for="Username"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-xl-12">
                                <div class="form-group row" id="password-area">
                                    <div class="col-xl-3">
                                        <nop-label asp-for="Password" />
                                    </div>
                                    <div class="col-xl-4">
                                        <div class="input-group align-items-stretch @(Model.Id > 0 ? "d-password-input-group" : "")">
                                            <div class="d-password-with-icon">
                                                <nop-editor asp-for="Password" html-attributes="@(new { autocomplete = "new-password" })" />
                                                <svg id="eye_visible" class="pass-eye" width="30px" height="30px" viewBox="0 0 16 16" xmlns="http://www.w3.org/2000/svg" fill="none">
                                                    <g fill="#777777" fill-rule="evenodd" clip-rule="evenodd">
                                                        <path d="M8 5a3 3 0 100 6 3 3 0 000-6zM6.5 8a1.5 1.5 0 113 0 1.5 1.5 0 01-3 0z" />
                                                        <path d="M8 2C5.422 2 3.43 3.32 2.112 4.65A10.948 10.948 0 00.596 6.564c-.173.28-.31.536-.407.75a3 3 0 00-.122.31C.04 7.705 0 7.846 0 8s.041.296.067.375a3 3 0 00.122.31c.097.215.234.471.407.751.346.56.854 1.246 1.516 1.914C3.43 12.68 5.422 14 8 14s4.57-1.32 5.888-2.65a10.952 10.952 0 001.516-1.914c.173-.28.31-.536.407-.75.048-.107.09-.212.122-.31.026-.08.067-.221.067-.376s-.041-.296-.067-.375a2.978 2.978 0 00-.122-.31 6.777 6.777 0 00-.407-.751 10.952 10.952 0 00-1.516-1.914C12.57 3.32 10.578 2 8 2zM1.556 7.933a2.314 2.314 0 00-.03.067l.03.067c.065.145.17.344.316.58a9.45 9.45 0 001.306 1.647C4.332 11.458 5.964 12.5 8 12.5s3.668-1.042 4.822-2.206a9.45 9.45 0 001.306-1.646A5.336 5.336 0 0014.473 8a5.335 5.335 0 00-.346-.648 9.452 9.452 0 00-1.305-1.646C11.668 4.542 10.036 3.5 8 3.5S4.332 4.542 3.178 5.706a9.45 9.45 0 00-1.306 1.646 5.316 5.316 0 00-.316.58z" />
                                                    </g>
                                                </svg>
                                                <svg id="eye_close" class="pass-eye" width="30px" height="30px" viewBox="0 0 16 16" xmlns="http://www.w3.org/2000/svg" fill="none">
                                                    <g fill="#777777" fill-rule="evenodd" clip-rule="evenodd">
                                                        <path d="M2.28 1.22a.75.75 0 00-1.06 1.06l1.664 1.665A10.99 10.99 0 00.977 5.994c-.295.41-.524.791-.683 1.103a4.16 4.16 0 00-.194.431A1.4 1.4 0 000 8c0 .155.041.296.067.375a3 3 0 00.122.31c.097.215.234.471.407.751.346.56.854 1.246 1.516 1.914C3.43 12.68 5.422 14 8 14c1.49 0 2.786-.442 3.868-1.071l1.852 1.851a.75.75 0 101.06-1.06l-4.645-4.646a.383.383 0 00-.008-.007v-.001l-3.19-3.19a.555.555 0 00-.014-.014L2.28 1.22zm3.127 5.248L3.95 5.01a9.444 9.444 0 00-1.754 1.857 7.362 7.362 0 00-.566.911c-.046.09-.08.164-.104.221l.03.067c.065.145.17.344.316.58a9.45 9.45 0 001.306 1.647C4.332 11.458 5.964 12.5 8 12.5c1.028 0 1.95-.264 2.763-.677l-1.23-1.23C9.078 10.858 8.552 11 8 11a3 3 0 01-3-3c0-.553.142-1.079.407-1.532zm2.985 2.985L6.547 7.608A1.62 1.62 0 006.5 8 1.5 1.5 0 008 9.5c.137 0 .269-.016.392-.047zM8 3.5c-.306 0-.602.023-.887.067a.75.75 0 11-.226-1.483C7.247 2.029 7.617 2 8 2c2.578 0 4.57 1.32 5.888 2.65.662.668 1.17 1.354 1.516 1.914.173.28.31.536.407.75.048.107.09.212.122.31.026.08.067.221.067.376 0 .21-.079.42-.126.537a4.99 4.99 0 01-.251.524c-.21.384-.515.857-.909 1.355a.75.75 0 11-1.176-.93c.343-.434.6-.836.768-1.144.078-.143.133-.258.168-.342a5.336 5.336 0 00-.346-.648 9.452 9.452 0 00-1.306-1.646C11.668 4.542 10.036 3.5 8 3.5zm6.511 4.604l-.002-.008.001.005.001.003z" />
                                                    </g>
                                                </svg>
                                            </div>
                                            <div class="input-group-append">
                                                @if (Model.Id > 0)
                                                {
                                                    <button type="submit" name="changepassword" class="btn btn-primary d-password-input-btn rounded">
                                                        @T("Admin.Configuration.EmailAccounts.Fields.Password.Change")
                                                    </button>
                                                }
                                            </div>
                                        </div>
                                        <span asp-validation-for="Password"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-xl-12">
                                <div class="form-group row" id="ssl-area">
                                    <div class="col-6 col-sm-2 col-xl-3">
                                        <nop-label asp-for="EnableSsl" />
                                    </div>
                                    <div class="col-4 col-xl-4">
                                        <nop-editor asp-for="EnableSsl" />
                                        <span asp-validation-for="EnableSsl"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-xl-12">
                                <div class="form-group row" id="default-area">
                                    <div class="col-6 col-xl-3">
                                        <nop-label asp-for="UseDefaultCredentials" />
                                    </div>
                                    <div class="col-4 col-xl-4">
                                        <nop-editor asp-for="UseDefaultCredentials" />
                                        <span asp-validation-for="UseDefaultCredentials"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
                @if (Model.Id > 0)
                {
                    <div class="card card-default mt-2 mb-0 d-card" id="test-email-area">
                        <div class="card-header with-border">
                            <h3 class="card-title">
                                <i class="fa fa-info" aria-hidden="true"></i>
                                @T("Admin.Configuration.EmailAccounts.SendTestEmail")
                            </h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group row">
                                <div class="col-xl-3">
                                    <nop-label asp-for="SendTestEmailTo"/>
                                </div>
                                <div class="col-xl-4">
                                    <div class="input-group align-items-stretch">
                                        <nop-editor asp-for="SendTestEmailTo"/>
                                        <div class="input-group-append">
                                            <button type="submit" name="sendtestemail" class="btn btn-primary d-password-input-btn rounded">
                                                @T("Admin.Configuration.EmailAccounts.SendTestEmail.Button")
                                            </button>
                                        </div>
                                    </div>
                                    <span asp-validation-for="SendTestEmailTo"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                @await Component.InvokeAsync(typeof(AdminWidgetViewComponent), new { widgetZone = AdminWidgetZones.EmailAccountDetailsBottom, additionalData = Model })
            </div>
        </div>
    </div>
</section>
<script>
    $("#Password").attr("placeholder", "Enter Password");

    enforceLowerCase("#Email, #SendTestEmailTo");
    removeSpecialCharactersAndNumber("#DisplayName", true);

    $(document).ready(function () {
        $('#eye_close').hide();
        $('#eye_visible').click(function () {
            $('#Password').attr('type', 'text');
            $(this).hide();
            $('#eye_close').show();
        });

        $('#eye_close').click(function () {
            $('#Password').attr('type', 'password');
            $(this).hide();
            $('#eye_visible').show();
        });
    });
</script>