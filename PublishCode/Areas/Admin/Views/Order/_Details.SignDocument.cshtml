@model OrderModel
<div class="card d-card">
    <div class="card-header with-border clearfix d-flex align-items-center">
        <div class="card-title">
            <i class="fas fa-user"></i>
            Signed Documents
        </div>
    </div>
    <div class="card-body customer-report-content">
        <div class="table-responsive">
        <table class="table table-hover datatbl-custom-tbl-view parent-tbl">
            <thead class="table-light">
                <tr>
                    <th>@T("Admin.Orders.Fields.OrderNumber")</th>
                    <th>Document Name</th>
                    <th>Signed Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.SignedDocuments != null && Model.SignedDocuments.Any())
                {
                    @foreach (var document in Model.SignedDocuments)
                    {
                        <tr>
                            <td>@document.CustomOrderNumber</td>
                            <td>@document.PdfFileName</td>
                            <td>@document.SignatureDate.ToDateFormat()</td>
                            <td>
                                <button type="button" class="btn btn-primary view-file" data-id="@document.DocumentGUID">
                                    <i class="fas fa-eye"></i> View
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted">No signed documents available</td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
        <!-- Modal for preview -->
        <div class="modal fade" id="filePreviewModal" tabindex="-1" aria-labelledby="filePreviewLabel" aria-hidden="true" data-backdrop="static">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="filePreviewLabel">Document Preview</h5>
                        <button type="button" class="close" onclick="$('#filePreviewModal').modal('hide');" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body text-center">
                        <iframe id="filePreview" src="" width="100%" height="600px"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).on("click", ".view-file", function () {
        var fileId = $(this).data("id");
        var url = '@Url.Action("GetCustomerFileDownloadData", "Order")?downloadGuid=' + fileId;
        $("#filePreview").attr("src", url);
        $("#filePreviewModal").modal("show");
    });
</script>
