@model OrderModel

@{
    //page title
    ViewBag.PageTitle = T("Admin.Order.AddNew").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Orders");
}

<form asp-controller="Order" asp-action="Create" method="post" id="order-form" enctype="multipart/form-data">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Order.AddNew")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Admin.Order.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">

            @if (Model.IsNewOrder)
            {
                <button type="submit" name="save-continue" class="btn btn-primary">
                    <i class="far fa-save"></i>
                    @T("Admin.Orders.Save.Create.SubOrder")
                </button>
            }
            else
            {
                <button type="submit" name="save" class="btn btn-primary">
                    <i class="far fa-save"></i>
                    @T("Admin.Common.Save")
                </button>
            }
            <button type="button" class="btn btn-primary" data-target="#Cancel-Confirmation-Popup" data-toggle="modal">
                <i class="fa fa-times" aria-hidden="true"></i>
                @T("Admin.Common.Cancel")
            </button>
        </div>
    </div>
    <section class="content">
    
        <div class="container-fluid">
            @await Html.PartialAsync("_CreateOrUpdate", Model)
            <div class="content-header clearfix border-0 m-0">
                <div class="float-left"></div>
                <div class="float-right">
                    @if (Model.IsNewOrder)
                    {
                        <button type="submit" name="save-continue" class="btn btn-primary">
                            <i class="far fa-save"></i>
                            @T("Admin.Orders.Save.Create.SubOrder")
                        </button>
                    }
                    else
                    {
                        <button type="submit" name="save" class="btn btn-primary">
                            <i class="far fa-save"></i>
                            @T("Admin.Common.Save")
                        </button>
                    }
                    <button type="button" class="btn btn-primary" data-target="#Cancel-Confirmation-Popup" data-toggle="modal">
                        <i class="fa fa-times" aria-hidden="true"></i>
                        @T("Admin.Common.Cancel")
                    </button>
                </div>
            </div>
        </div>
    </section>

    <div id="Cancel-Confirmation-Popup" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="cancel-confirmation-popup-title" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="cancel-confirmation-popup-title">@T("Admin.Common.Cancel")</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">x</span></button>
                </div>
                <div class="form-horizontal">
                    <div class="modal-body">
                        @T("Admin.Common.Cancel.Confirmation.Popup.Text")
                    </div>
                    <div class="modal-footer">
                        <span class="btn btn-default" data-dismiss="modal" aria-label="Close">@T("Admin.Common.No")</span>
                        <a asp-action="List" class="btn btn-primary">@T("Admin.Common.Yes")</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>