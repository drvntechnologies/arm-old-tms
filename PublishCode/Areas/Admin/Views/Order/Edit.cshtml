@model OrderModel

@{
    //page title
    ViewBag.PageTitle = T("Admin.Orders.EditOrderDetails").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Orders");
}

<form asp-controller="Order" asp-action="Edit" method="post" id="order-form" enctype="multipart/form-data">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Orders.EditOrderDetails")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="Details" asp-route-id="@Model.LeadId">@T("Admin.Orders.BackToOrderDetail")</a>
            </small>
        </h1>
        <div class="float-right">

            @if (!Model.IsOrderDelivered || Model.HasPermissionToUpdateDeliveredOrder)
            {
                <button type="submit" name="save-continue" class="btn btn-primary">
                    <i class="far fa-save"></i>
                    @T("Admin.Common.Save")
                </button>
            }

            <button type="button" class="btn btn-primary" data-target="#Cancel-Confirmation-Popup" data-toggle="modal">
                <i class="fa fa-times" aria-hidden="true"></i>
                @T("Admin.Common.Cancel")
            </button>
            <span id="order-delete" class="btn btn-danger">
                <i class="far fa-trash-alt"></i>
                @T("Admin.Common.Delete")
            </span>

            @await Component.InvokeAsync(typeof(AdminWidgetViewComponent), new { widgetZone = AdminWidgetZones.OrderDetailsButtons, additionalData = Model })
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            @await Html.PartialAsync("_CreateOrUpdate", Model)
            <div class="content-header clearfix border-0 m-0">
                <div class="float-left"></div>
                <div class="float-right">
                    @if (!Model.IsOrderDelivered || Model.HasPermissionToUpdateDeliveredOrder)
                    {
                        <button type="submit" name="save-continue" class="btn btn-primary">
                            <i class="far fa-save"></i>
                            @T("Admin.Common.Save")
                        </button>
                    }

                    <button type="button" class="btn btn-primary" data-target="#Cancel-Confirmation-Popup" data-toggle="modal">
                        <i class="fa fa-times" aria-hidden="true"></i>
                        @T("Admin.Common.Cancel")
                    </button>
                    <span id="order-delete" class="btn btn-danger">
                        <i class="far fa-trash-alt"></i>
                        @T("Admin.Common.Delete")
                    </span>
                    @await Component.InvokeAsync(typeof(AdminWidgetViewComponent), new { widgetZone = AdminWidgetZones.OrderDetailsButtons, additionalData = Model })
                </div>
            </div>
        </div>
    </section>

    <div id="Cancel-Confirmation-Popup" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="cancel-confirmation-popup-title" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="cancel-confirmation-popup-title">@T("Admin.Common.Cancel")</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">x</span></button>
                </div>
                <div class="form-horizontal">
                    <div class="modal-body">
                        @T("Admin.Common.Cancel.Confirmation.Popup.Text")
                    </div>
                    <div class="modal-footer">
                        <span class="btn btn-default" data-dismiss="modal" aria-label="Close">@T("Admin.Common.No")</span>
                        <a asp-action="List" class="btn btn-primary">@T("Admin.Common.Yes")</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.HasDeliveredStatus)
    {
        <div id="Delivered-Confirmation-Popup" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="delivered-confirmation-popup-title" style="display: none;">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="delivered-confirmation-popup-title">@T("Admin.Common.AreYouSure")</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">x</span></button>
                    </div>
                    <div class="form-horizontal">
                        <div class="modal-body">
                            <input type="hidden" id="accepted-delivery-date" />
                            @T("Admin.Order.Delivered.Status.Confirmation.Text")
                        </div>
                        <div class="modal-footer">
                            <span class="btn btn-default close" data-dismiss="modal" aria-label="Close">@T("Admin.Common.No")</span>
                            <button type="submit" name="save-continue" id="confirm-delivery" class="btn btn-primary">@T("Admin.Common.Yes")</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</form>

<nop-delete-confirmation asp-model-id="@Model.LeadId" asp-button-id="order-delete" />

@if (!Model.HasDeliveredStatus)
{
    <script>

        let isConfirmDeliveryEnable = false;

        $("#order-form").on('submit', function(e){
            const deliveredDate = $("#ActualDeliveryDate").val();

            if (!deliveredDate) return true;

            const acceptedDeliveryDate = toBoolean($("#accepted-delivery-date").val());
            if (acceptedDeliveryDate) {
                isConfirmDeliveryEnable = true;

                setTimeout(function () {
                  $("#confirm-delivery").prop("disabled", true);
                }, 2);

                return true;
            }

            e.preventDefault();
            $("#Delivered-Confirmation-Popup").modal('show');
        });

	    $("#Delivered-Confirmation-Popup").on('hide.bs.modal', function () {
            $("#accepted-delivery-date").val(false);

            if (isConfirmDeliveryEnable){
				return;
            }
            
            $("#confirm-delivery").prop("disabled", false);
	    });

        $("#confirm-delivery").on('click', function (e) {
            $("#accepted-delivery-date").val(true);
	    });

        $("#Delivered-Confirmation-Popup .close").on('click', function () {
            $("#Delivered-Confirmation-Popup").modal('hide');
        });

    </script>
}