@model CommissionSearchModel

@{
    //page title
    ViewBag.PageTitle = T("Admin.Configuration.Settings.Commission").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Commissions");
}

@{
    const string hideSearchBlockAttributeName = "CommissionPage.HideSearchBlock";
    var hideSearchBlock = await genericAttributeService.GetAttributeAsync<bool>(await workContext.GetCurrentCustomerAsync(), hideSearchBlockAttributeName);
}

<div class="content-header clearfix">
    <h1 class="float-left">
        @T("Admin.Configuration.Settings.Commission")
    </h1>
    <div class="float-right">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-square"></i>
            @T("Admin.Common.AddNew")
        </a>        
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal d-form-horizontal">
            <div class="cards-group">
                <div class="card card-default card-search d-card-search d-card">
                    <div class="card-body">
                        <div class="row search-row @(!hideSearchBlock ? "opened" : "")" data-hideAttribute="@hideSearchBlockAttributeName">
                            <div class="search-text">@T("Admin.Common.Search")</div>
                            <div class="icon-search"><i class="fas fa-search" aria-hidden="true"></i></div>
                            <div class="icon-collapse"><i class="far fa-angle-@(!hideSearchBlock ? "up" : "down")" aria-hidden="true"></i></div>
                        </div>
                        <div class="search-body @(hideSearchBlock ? "closed" : "")">
                            <div class="row">
                                <div class="col-md-6 col-lg-6 col-xl-3">
                                    <div class="form-group row">
                                        <div class="col-md-12">
                                            <nop-label asp-for="CustomerName" />
                                        </div>
                                        <div class="col-md-12">
                                            <nop-editor asp-for="CustomerName" html-attributes="@(new { placeholder = "Enter Customer Name" })" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="text-center col-12">
                                    <button type="button" id="search-commission" class="btn btn-primary btn-search">
                                        <i class="fas fa-search"></i>
                                        @T("Admin.Common.Search")
                                    </button>
                                    <button type="button" id="commission-btncancel" class="btn btn-primary btn-cancel-search">
                                        <i class="fas fa-times"></i>
                                        @T("Admin.Common.Clear")
                                    </button>
                                </div>
                                <script>
                                    cancelSearch("#commission-btncancel");
                                </script>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card card-default d-datatable d-card m-0">
                    <div class="card-body">
                        @await Html.PartialAsync("Table", new DataTablesModel
                        {
                            Name = "commission-grid",
                            UrlRead = new DataUrl("List", "Commission", null),                            
                            UrlDelete = new DataUrl("Delete", "Commission", null),
                            SearchButtonId = "search-commission",
                            Length = Model.PageSize,
                            LengthMenu = Model.AvailablePageSizes,
                            Ordering = true,
                            Order = "0,'asc'",
                            Targets = "6,7",
                            Orderable = false,  
                            Filters = new List<FilterParameter>
                            {
                                new FilterParameter(nameof(Model.CustomerName)),
                            },
                            ColumnCollection = new List<ColumnProperty>
                            {
                                new ColumnProperty(nameof(CommissionModel.Id))
                                {   
                                    Visible = false
                                },
                                new ColumnProperty(nameof(CommissionModel.CustomerId))
                                {   
                                    Visible = false
                                },
                                new ColumnProperty(nameof(CommissionModel.CustomerName))
                                {                                    
                                    Title = $"<span class='d-th'>{T("Admin.Configuration.Settings.CommissionModel.Fields.CustomerName").Text}</span>",
                                    Width = "200",  
                                    Encode = false
                                },
                                new ColumnProperty(nameof(CommissionModel.CommissionStartDateValue))
                                {                                    
                                    Title = $"<span class='d-th'>{T("Admin.Configuration.Settings.CommissionModel.Fields.CommissionStartDate").Text}</span>",                                    
                                    Width = "200",   
                                    Encode = false,
                                    ClassName = NopColumnClassDefaults.CenterAll,
                                },
                                new ColumnProperty(nameof(CommissionModel.CommissionEndDateValue))
                                {
                                    Title = $"<span class='d-th'>{T("Admin.Configuration.Settings.CommissionModel.Fields.CommissionEndDate").Text}</span>",                                    
                                    Width = "200",                               
                                    ClassName = NopColumnClassDefaults.CenterAll,
                                },
                                new ColumnProperty(nameof(CommissionModel.CommissionPercentageValue))
                                {
                                    Title = $"<span class='d-th'>{T("Admin.Configuration.Settings.CommissionModel.Fields.CommissionPercentage").Text}</span>",                                    
                                    ClassName = NopColumnClassDefaults.CenterAll,
                                    Width = "200"                                                                    
                                },
                                new ColumnProperty(nameof(CommissionModel.DefaultCommissionPercentageValue))
                                {
                                    Title = T("Admin.Configuration.Settings.CommissionModel.Fields.DefaultCommissionPercentage").Text,
                                    ClassName = NopColumnClassDefaults.CenterAll,
                                    Width = "200"                                                                    
                                },
                                new ColumnProperty(nameof(CommissionModel.Id))
                                {
                                    Title = T("Admin.Common.Edit").Text,
                                    Width = "100",
                                    ClassName = NopColumnClassDefaults.Button,
                                    Render = new RenderButtonEdit(new DataUrl("Edit"))
                                },                                
                            }
                        })
                    </div>                    
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    removeSpecialCharactersAndNumber("#CustomerName", this);
</script>