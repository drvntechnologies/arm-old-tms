@using Nop.Web.Areas.Admin.Models.LogiscticsVendor
@model VendorMasterModel
@{
    // Page title
    ViewBag.PageTitle = T("Admin.VendorMaster.Edit").Text;
    // Active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("VendorMaster");

    var formId = "vendor-form";
    ViewData["FormId"] = formId;
}

<form asp-controller="LogisticsVendorMaster" asp-action="Edit" method="post" id="@formId">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.VendorMaster.Edit") - @Model.CompanyName
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="Details" asp-route-id="@Model.Id">@T("Admin.VendorMaster.BackToDetail")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="button" class="btn btn-primary" data-target="#Cancel-Confirmation-Popup" data-toggle="modal">
                <i class="fa fa-times" aria-hidden="true"></i>
                @T("Admin.Common.Cancel")
            </button>
            <span id="vendor-delete" class="btn btn-danger">
                <i class="far fa-trash-alt"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>

    <div class="content">
        @await Html.PartialAsync("_CreateOrUpdate", Model)
        <div class="content-header clearfix border-0 m-0">
            <div class="float-left"></div>
            <div class="float-right">
                <button type="submit" name="save" class="btn btn-primary">
                    <i class="far fa-save"></i>
                    @T("Admin.Common.Save")
                </button>
                <button type="button" class="btn btn-primary" data-target="#Cancel-Confirmation-Popup" data-toggle="modal">
                    <i class="fa fa-times" aria-hidden="true"></i>
                    @T("Admin.Common.Cancel")
                </button>
                <span id="vendor-delete1" class="btn btn-danger">
                    <i class="far fa-trash-alt"></i>
                    @T("Admin.Common.Delete")
                </span>
            </div>
        </div>
    </div>

    <div id="Cancel-Confirmation-Popup" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="cancel-confirmation-popup-title" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="vendorFiledelete-confirmation-title">@T("Admin.Common.Cancel")</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">x</span></button>
                </div>
                <div class="form-horizontal">
                    <div class="modal-body">
                        @T("Admin.Common.Cancel.Confirmation.Popup.Text")
                    </div>
                    <div class="modal-footer">
                        <span class="btn btn-default" data-dismiss="modal" aria-label="Close">@T("Admin.Common.No")</span>
                        <a asp-action="List" class="btn btn-primary">@T("Admin.Common.Yes")</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="vendor-delete" />
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="vendor-delete1" />
