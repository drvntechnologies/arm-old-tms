@using Nop.Web.Areas.Admin.Models.LogiscticsVendor
@model LogisticsVendorMasterFilesModel
@{
    Layout = "_AdminPopupLayout";

    //page title
    ViewBag.PageTitle = T("Admin.LogisticsVendorMasterFiles.View").Text;
}


<main class="right-main-area">
    <div class="page-title-area">
        <h3 class="mb-2">
            @T("Admin.LogisticsVendorMasterFiles.View")
        </h3>
    </div>
    <div class="content">
        <div class="form-horizontal">
            <div class="cards-group">
                <div class="card card-default card-popup">
                    <div class="card-body">
                        <iframe id="carrierViewFrame" width="100%" height="1000"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<script>
    // Call the function to load the PDF into the iframe when the document is ready
    document.addEventListener('DOMContentLoaded', function () {

        loadPdfIntoIframe('@Html.Raw(Model.CarrierFileView)', '@Model.ContentType');
    });
</script>