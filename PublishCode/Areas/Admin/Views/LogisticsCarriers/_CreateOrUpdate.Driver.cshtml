@model LogisticsDriversModel

@* <div asp-validation-summary="All"></div> *@
<input asp-for="Id" type="hidden" />
<input asp-for="CarrierId" type="hidden" />

@if (ViewBag.RefreshPage == true)
{
	<script>
		try { window.opener.document.forms['@(Context.Request.Query["formId"])'].@(Context.Request.Query["btnId"]).click();
		catch (e) { }
		window.close();
	</script>
}

<div class="cards-group">
    <div class="card card-default card-popup">
        <div class="card-body">
            <div class="form-group row">
                <div class="col-sm-3">
                    <nop-label asp-for="FirstName" asp-required="Model.FirstNameRequired" />
                </div>
                <div class="col-sm-9">
                    <nop-editor asp-for="FirstName" />
                    <span asp-validation-for="FirstName"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-3">
                    <nop-label asp-for="LastName" asp-required="Model.LastNameRequired" />
                </div>
                <div class="col-sm-9">
                    <nop-editor asp-for="LastName" />
                    <span asp-validation-for="LastName"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-3 ">
                    <nop-label asp-for="Email" asp-required="Model.EmailRequired" />
                </div>
                <div class="col-sm-9">
                    <nop-editor asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-3">
                    <nop-label asp-for="Phone" asp-required="Model.PhoneRequired" />
                </div>
                <div class="col-sm-9">
                    <nop-editor asp-for="Phone" />
                    <span asp-validation-for="Phone"></span>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    commonPhoneNumber("#Phone");
</script>