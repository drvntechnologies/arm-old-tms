@model CompanyModel

<div class="validation-top-listarea">	
	<div asp-validation-summary="All"></div>	
</div>
<input asp-for="Id" type="hidden" />

@{
	const string hideInfoBlockAttributeName = "Company.HideInfoBlock";
	var customer = await workContext.GetCurrentCustomerAsync();
	var hideInfoBlock = await genericAttributeService.GetAttributeAsync<bool>(customer, hideInfoBlockAttributeName);

	const string hideCustomersBlockAttributeName = "Company.HideCustomerBlock";
	var hideCustomersBlock = await genericAttributeService.GetAttributeAsync<bool>(customer, hideCustomersBlockAttributeName, defaultValue: true);
}

<section class="create-edit-pg-common-design">
	<div class="form-horizontal">
		<nop-cards id="customer-cards">

			<nop-card asp-name="customer-info" asp-icon="fas fa-info" asp-title="@T("Admin.Client.CustomersInfo")" asp-hide-block-attribute-name="@hideInfoBlockAttributeName" asp-hide="@hideInfoBlock" asp-advanced="false">@await Html.PartialAsync("_CreateOrUpdate.Info", Model)</nop-card>

			<nop-card asp-name="contacts-info" asp-icon="fas fa-user" asp-title="@T("Admin.Customer.ContactInfo")" asp-hide-block-attribute-name="@hideCustomersBlockAttributeName" asp-hide="@hideCustomersBlock" asp-advanced="false">@await Html.PartialAsync("_CreateOrUpdate.ContactInfo", Model)</nop-card>

		</nop-cards>
	</div>
</section>